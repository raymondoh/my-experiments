rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /certifications/{body}/{userId}/{certificationId}/{fileName} {
      allow write: if request.auth != null && request.auth.uid == userId;
      allow read: if true;
    }
    match /{allPaths=**} {
      allow read;
      allow write: if false;
    }
  }
}
